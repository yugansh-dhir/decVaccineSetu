<% layout('layouts/boilerplate')%>

<div class="container">
  <!-- <h1 style= "text-align: center; margin: 20px auto;">Search for a movie</h1> -->

  <div>
    <h1 style="text-align: center; margin: 20px 0 20px 0">
      Search for vaccine availability
    </h1>
    <div style="width: 30%; margin: 0 auto">
      <form action="/results" method="GET">
        <div class="form-group">
          <input
            class="form-control"
            type="number"
            placeholder="Pin Code"
            name="pincode"
            step="1"
          />
        </div>
        <div class="form-group">
          <!-- <input
            class="form-control"
            type="date"
            placeholder="date"
            name="date"
          /> -->
          <input
            class="form-control"
            placeholder="date"
            name="date"
            type="date"
            data-date=""
            data-date-format="DD MMMM YYYY"
          />
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>

        <!-- <input type = "submit"> -->
      </form>
    </div>
  </div>
</div>

