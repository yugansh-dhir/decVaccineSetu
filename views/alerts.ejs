<% layout('layouts/boilerplate')%>

    <div class="container">
        <div>
            <h1 style="text-align: center; margin: 20px 0 20px 0">
                Register
            </h1>
            <div style="width: 30%; margin: 0 auto">
                <form action="/alerts" method="POST">
                    <div class="form-group">
                        <label for="email">Email address</label>
                        <input type="email" required name="email" class="form-control" id="email" aria-describedby="emailHelp"
                            placeholder="email">
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                            else.</small>
                    </div>
                    <div class="form-group">
                        <label for="pincode">Pin Code</label>
                        <input type="number" name="pincode" required class="form-control" id="pincode" placeholder="pin code">
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
                <small id="emailHelp" class="form-text text-muted">Note: Alerts are totally based on the data uploaded by govt. or private organizations. Real numbers may vary.</small>

            </div>
        </div>
    </div>